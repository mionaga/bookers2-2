<%= render 'info', user: @user %>
<%= render 'books/create-book', book: @new_book %>

<h3>Users</h3>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td>
        <%= link_to "show",user_path(user.id) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>